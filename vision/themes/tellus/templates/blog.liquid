<h2 id="page-title">{{page.title}}</h2>

{% paginate blog.articles by 20 %}

  {% for article in blog.articles  %}

      <h3 class="blog">
        <a href="{{article.url}}">{{ article.title }}</a>
      </h3>
      <p class="posted"> posted {{ article.created_at | date: "%Y %h" }} by {{ article.author }}
        {% if blog.comments_enabled? %}
          &mdash;
          <a href="{{article.url}}#comments">{{ article.comments_count }} comments</a>
        {% endif %}  
      </p>
      <div class="article-body-truncated textile">
        {{ article.content }}
      </div>    
  
  {% endfor %}
  
  
  {% if paginate.pages > 1 %}
    <div id="pagination" class="info" style="margin-top: 20px">
      {{ paginate | default_pagination }}
    </div>
  {% endif %}

{% endpaginate %}